{% extends "theme::layouts/default" %}

{% block content %}

    <script>
        var diskSlug = "{{ diskSlug }}";
        var filesCount = {{ count(files) }};
    </script>

    <div class="inner">
        <div class="container-fluid">
            <div class="panel" style="padding: 0 30px;">
                <div class="panel-body">

                    Migrating <span id="current-count">10</span> of {{ count(files) }}

                    <div id="file-upload-progress" class="progress">

                        <div class="progress-bar" role="progressbar" aria-valuenow="{{ 10 / count(files) * 100 }}"
                             aria-valuemin="0" aria-valuemax="100" style="width:{{ 10 / count(files) * 100 }}%">

                            <span class="sr-only">{{ 10 / count(files) * 100 }}% Complete</span>

                        </div>

                    </div>

                    <div id="failed-files"></div>

                </div>
            </div>
        </div>
    </div>

{% endblock %}